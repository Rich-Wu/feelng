<!-- MENU SECTION  -->
<div class="menu-container" onclick="openMenu()">
  <div class="bar1"></div>
  <div class="bar2"></div>
  <div class="bar3"></div>

  <div id="menu-content" class="menu-dropdown">
    <div onclick="openOverlay1()">About</div>
    <% if !session[:id] %>
      <div onclick="openOverlay2()">Signup</div>
      <div onclick="">Spotify Authentication</div>
    <% else %>
      <%= link_to "Profile", "/profile" %>
      <%= link_to "Logout", logout_path, method: :post %>
    <% end %>
  </div>
</div>

<!-- MENU OVERLAYS -->
<div id="overlay1" class="overlay-container">
  <div class="closebtn" onclick="closeOverlay1()">&times;</div>
  <div class="overlay-about">
    <p>'Feeln' is your go-to content generator app based...you guessed it! Your current mood!<br>
        Select an emoji and watch the magic to happen!
    </p>
  </div>
</div>



<!-- EMOJI GRID -->
<h1 id="main">What's The Mood?</h1>
<!-- <h3>Welcome <%=current_spotify_user.username if current_spotify_user%></h3> -->
<%= form_tag("/mood", method: "post", class: "mood") do %>
  <div class='container'>
    <%= hidden_field_tag 'coordinates' %>
    <% Dir.foreach('./app/assets/images/emojis') do |item| %>
      <% next if item[0] == '.' %>
      <div class="emoji">
        <label>
          <%= radio_button_tag(:mood, item) %>
          <%= image_tag("emojis/#{item}") %>
        </label>
      </div>
    <% end %>
  </div>
  <%= submit_tag('Submit') %>
<% end %>

<%= javascript_include_tag 'emoji-grid', 'pages' %>
