<%= form_for message, url: new_message_path(message), remote: true, authenticity_token: true do |f|%>
    <%= f.text_area :body, id:"message-box", data: {textarea: "message"}, placeholder: 'Your message here...'%>
    <%= f.hidden_field :chatroom_id, value: chatroom.id%>
    <%= f.submit "send", data: {send: "message"}%>
<%end%>
